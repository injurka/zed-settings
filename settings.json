{
  // --- Общие настройки и UI ---
  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent": {
    "play_sound_when_agent_done": true,
    "model_parameters": [],
    "always_allow_tool_actions": true,
    "version": "2"
  },
  "minimap": {
    "show": "always"
  },
  "auto_signature_help": true,
  "icon_theme": "Material Icon Theme",
  "base_keymap": "VSCode",
  "theme": {
    "mode": "system",
    "light": "Zedokai Light",
    "dark": "Zedokai Light (Custom)"
  },
  "ui_font_size": 16,
  "ui_font_family": "Maple Mono",
  // --- Настройки редактора (Buffer) ---
  "buffer_font_family": "Maple Mono",
  "buffer_font_size": 18,
  "buffer_font_features": {
    "calt": true,
    "liga": true
  },
  "tab_size": 2,
  "on_focus_change": "on",
  "format_on_save": "on",
  "format_on_paste": true,
  "formatter": {
    "code_actions": {
      "source.fixAll.eslint": true
    }
  },
  "autosave": "on_focus_change",
  "ensure_final_newline_on_save": true,
  "default_line_ending": "lf",
  "sticky_header": "on",
  "scrollbar": {
    "show": "always"
  },
  "indent_guides": {
    "enabled": true
  },
  "bracket_pair_colorization": {
    "enabled": true
  },
  // --- Языки и форматирование ---
  "languages": {
    "JavaScript": {
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TSX": {
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Vue": {
      "format_on_save": "on"
    },
    "Markdown": {
      // Для Markdown в Zed встроенный форматер
    }
  },
  // --- Интеграции ---
  "copilot": {
    "disabled": true
  },
  "git": {
    "auto_fetch": "on"
  },
  "project_panel": {
    "indent_size": 10,
    "file_nesting": "on"
  },
  // --- Терминал ---
  "terminal": {
    "font_family": "Maple Mono",
    "font_size": 17,
    "line_height": "standard",
    "blinking": "on"
  },
  // --- Исключение файлов ---
  "exclude_files": [
    ".git",
    ".github",
    ".nuxt",
    ".output",
    ".pnpm",
    ".vscode",
    ".yarn",
    "bower_components",
    "dist/**",
    "logs",
    "node_modules",
    "out/**",
    "package-lock.json",
    "pnpm-lock.yaml",
    "tmp",
    "yarn.lock"
  ]
}
